{
  "name": "aigelb-browser-extension",
  "description": "AI-based browser extension to read the web in German Easy Language (Leichte Sprache) using the power of local AI models",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev:chrome": "concurrently --kill-others-on-fail bun:webserver \"wxt -b chrome\"",
    "check": "concurrently --kill-others-on-fail --group bun:format:check bun:lint:check bun:typecheck",
    "fix": "bun run format:fix && bun run lint:fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:check": "eslint . --concurrency auto",
    "lint:fix": "eslint . --fix --concurrency auto",
    "typecheck": "vue-tsc --build --noEmit",
    "build": "concurrently --kill-others-on-fail --group bun:build:chrome bun:build:firefox bun:build:safari",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox --mv3",
    "build:safari": "wxt build -b safari --mv3",
    "zip": "concurrently --kill-others-on-fail --group bun:zip:chrome bun:zip:firefox bun:zip:safari",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "zip:safari": "wxt zip -b safari --mv3",
    "webserver": "serve dev -p 8081",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.6",
    "@huggingface/hub": "2.4.1",
    "@vueuse/core": "13.8.0",
    "@webext-core/messaging": "2.3.0",
    "filesize": "11.0.2",
    "ollama": "0.5.17",
    "vue": "3.5.20",
    "vuetify": "3.9.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.6.2",
    "@mdi/js": "7.4.47",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.6.0",
    "@vue/tsconfig": "0.8.1",
    "@wxt-dev/auto-icons": "1.1.0",
    "@wxt-dev/i18n": "0.2.4",
    "@wxt-dev/module-vue": "1.0.2",
    "concurrently": "9.2.1",
    "eslint": "9.34.0",
    "eslint-plugin-vue": "10.4.0",
    "prettier": "3.6.2",
    "serve": "14.2.4",
    "typescript": "5.9.2",
    "unplugin-fonts": "1.4.0",
    "vite-plugin-vuetify": "2.1.2",
    "vue-tsc": "3.0.6",
    "wxt": "0.20.8"
  },
  "trustedDependencies": [
    "esbuild",
    "sharp",
    "spawn-sync"
  ]
}
